@model EcoEnergyRazorPages.Pages.AddSimulationModel
@{
	ViewData["Title"] = "Afegir Simulació";
	string sysType = "";
}

<div>
	<div class="text-center"><h1 class="display-4">Afegir Simulació</h1></div>
	<form action="" method="post">
		<div class="form-group">
			<select name="systemtype" asp-for="NewSimulation.SysType" @*asp-items="@Model.Systems"*@>
				<option value="@Model.Systems[0]">Solar</option>
				<option value="@Model.Systems[1]">Eòlic</option>
				<option value="@Model.Systems[2]">Hidroelèctric</option>
			</select>
		</div>
		<div class="form-group">
			@if (Model.Systems == 0)
			{
				<label asp-for="NewSimulation.ConfigPar">S</label>
				<input class="form-control" asp-for="NewSimulation.ConfigPar" />
				<span asp-validation-for="NewSimulation.ConfigPar" class="alert-dark"></span>
			}
			else if ((int)Model.NewSimulation.SysType == 1)
			{
				<label asp-for="NewSimulation.ConfigPar">W</label>
				<input class="form-control" asp-for="NewSimulation.ConfigPar" />
				<span asp-validation-for="NewSimulation.ConfigPar" class="alert-dark"></span>
			}
			else if ((int)Model.NewSimulation.SysType == 2)
			{
				<label asp-for="NewSimulation.ConfigPar">H</label>
				<input class="form-control" asp-for="NewSimulation.ConfigPar" />
				<span asp-validation-for="NewSimulation.ConfigPar" class="alert-dark"></span>
			}
		</div>
		<div class="form-group">
			<label asp-for="NewSystem.Ratio">Rati</label>
			<input class="form-control" asp-for="NewSystem.Ratio" />
			<span asp-validation-for="NewSystem.Ratio" class="alert-dark"></span>
		</div>
		<div class="form-group">
			<label asp-for="NewSystem.KWHCost">Cost kWh</label>
			<input class="form-control" asp-for="NewSystem.KWHCost" />
			<span asp-validation-for="NewSystem.KWHCost" class="alert-dark"></span>
		</div>
		<div class="form-group">
			<label asp-for="NewSystem.KWHPrice">Preu kWh</label>
			<input class="form-control" asp-for="NewSystem.KWHPrice" />
			<span asp-validation-for="NewSystem.KWHPrice" class="alert-dark"></span>
		</div>
		<button type="submit" class="btn btn-primary">Afegir</button>
	</form>
	<p>@Model.MsgFileError</p>
</div>

