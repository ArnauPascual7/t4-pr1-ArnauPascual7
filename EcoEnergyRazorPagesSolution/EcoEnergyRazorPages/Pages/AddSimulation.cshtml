@page
@model EcoEnergyRazorPages.Pages.AddSimulationModel
@{
	ViewData["Title"] = "Afegir Simulació";
	string sysType = "";
}

<div>
	<div class="text-center"><h1 class="display-4">Afegir Simulació</h1></div>
	<form action="" method="post">
		<div class="form-group">
			<select name="systemtype" asp-for="NewSimulation.SysType" asp-items="@Model.Systems"></select>
		</div>
		<div class="form-group">
			<label asp-for="NewSimulation.ConfigPar">Paràmetre a configurar</label>
			<input class="form-control" asp-for="NewSimulation.ConfigPar" />
			<span asp-validation-for="NewSimulation.ConfigPar" class="alert-dark"></span>
			<p>@Model.MsgConfigParError</p>
		</div>
		<div class="form-group">
			<label asp-for="NewSimulation.Ratio">Rati</label>
			<input class="form-control" asp-for="NewSimulation.Ratio" />
			<span asp-validation-for="NewSimulation.Ratio" class="alert-dark"></span>
		</div>
		<div class="form-group">
			<label asp-for="NewSimulation.KWHCost">Cost kWh</label>
			<input class="form-control" asp-for="NewSimulation.KWHCost" />
			<span asp-validation-for="NewSimulation.KWHCost" class="alert-dark"></span>
		</div>
		<div class="form-group">
			<label asp-for="NewSimulation.KWHPrice">Preu kWh</label>
			<input class="form-control" asp-for="NewSimulation.KWHPrice" />
			<span asp-validation-for="NewSimulation.KWHPrice" class="alert-dark"></span>
		</div>
		<button type="submit" class="btn btn-primary">Afegir</button>
	</form>
	<p>@Model.MsgFileError</p>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}